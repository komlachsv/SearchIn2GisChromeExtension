{
    "manifest_version": 2,
    "name": "Найти в 2ГИС",
    "description": "Удобный переход к поиску в 2ГИС с любой страницы",
    "version": "1.4",
    "background" : {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Найти в 2ГИС",      
        "default_icon": "2gis.png",
        "default_popup": "popup.html"
    },
	"icons": { "16": "2gis.png",
               "48": "2gis.png",
               "128": "2gis_128x128.png" },
	"permissions": [
        "activeTab",
        "contextMenus"
    ]		   
}